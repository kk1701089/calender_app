<h3>スケジュール編集</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/error", obj: @post %>


<%= form_with model: @post do |f| %>
<table>
  <tr>
    <th><%= f.label :title ,"タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>

  <tr>
    <th><%= f.label :start ,"開始日" %></th>
    <td><%= f.date_field :start %></td>
  </tr>

  <tr>
    <th><%= f.label :end_day ,"終了日" %></th>
    <td><%= f.date_field :end_day %></td>
  </tr>

  <tr>
    <th><%= f.label :confirmation ,"スケジュールメモ" %></th>
    <td><%= f.text_area :confirmation %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールの内容を更新する" %></li>
    <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
  </ul>
</div>
<% end %>