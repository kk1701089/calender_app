<h3>ユーザー新規作成</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>

    <tr>
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td>
        <%= f.check_box :all_day %>
        <%= f.label :all_day ,"終日の場合はチェックをしてください" %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :confirmation ,"スケジュールメモ" %></th>
      <td><%= f.text_area :confirmation %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>